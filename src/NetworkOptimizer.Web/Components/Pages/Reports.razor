@page "/reports"
@using NetworkOptimizer.Web.Services
@inject AuditService AuditService
@inject IJSRuntime JSRuntime
@inject ILogger<Reports> Logger
@rendermode InteractiveServer

<PageTitle>Reports - Network Optimizer</PageTitle>

<div class="page-header">
    <h1>Report Generation</h1>
    <p class="page-description">Generate and download professional network reports</p>
</div>

<div class="reports-container">
    <!-- Report Configuration -->
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">Generate New Report</h2>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label class="form-label">Report Type</label>
                <select class="form-control" @bind="reportType">
                    <option value="security-audit">Security Audit Report</option>
                    <option value="network-health">Network Health Report</option>
                    <option value="sqm-performance">SQM Performance Report</option>
                    <option value="comprehensive">Comprehensive Report (All)</option>
                </select>
            </div>

            <div class="form-group">
                <label class="form-label">Report Format</label>
                <div class="format-selector">
                    <label class="radio-card @(selectedFormat == "pdf" ? "selected" : "")" @onclick='() => selectedFormat = "pdf"'>
                        <input type="radio" name="format" value="pdf" checked="@(selectedFormat == "pdf")" />
                        <div class="card-icon">üìÑ</div>
                        <div class="card-title">PDF</div>
                        <div class="card-description">Polished, branded deliverable</div>
                    </label>

                    <label class="radio-card @(selectedFormat == "markdown" ? "selected" : "")" @onclick='() => selectedFormat = "markdown"'>
                        <input type="radio" name="format" value="markdown" checked="@(selectedFormat == "markdown")" />
                        <div class="card-icon">üìù</div>
                        <div class="card-title">Markdown</div>
                        <div class="card-description">Wiki, ticketing, version control</div>
                    </label>

                    <label class="radio-card @(selectedFormat == "html" ? "selected" : "")" @onclick='() => selectedFormat = "html"'>
                        <input type="radio" name="format" value="html" checked="@(selectedFormat == "html")" />
                        <div class="card-icon">üåê</div>
                        <div class="card-title">HTML</div>
                        <div class="card-description">Email delivery, web viewing</div>
                    </label>
                </div>
            </div>

            <div class="form-group">
                <label class="form-label">Report Sections</label>
                <div class="checkbox-group">
                    <label class="checkbox-label">
                        <input type="checkbox" @bind="includeExecutiveSummary" />
                        <span>Executive Summary</span>
                    </label>
                    <label class="checkbox-label">
                        <input type="checkbox" @bind="includeNetworkTopology" />
                        <span>Network Topology Overview</span>
                    </label>
                    <label class="checkbox-label">
                        <input type="checkbox" @bind="includeCriticalIssues" />
                        <span>Critical Issues</span>
                    </label>
                    <label class="checkbox-label">
                        <input type="checkbox" @bind="includeRecommendations" />
                        <span>Recommended Improvements</span>
                    </label>
                    <label class="checkbox-label">
                        <input type="checkbox" @bind="includeDeviceDetails" />
                        <span>Per-Device Analysis</span>
                    </label>
                    <label class="checkbox-label">
                        <input type="checkbox" @bind="includeHistoricalTrends" />
                        <span>Historical Trends</span>
                    </label>
                </div>
            </div>

            <div class="form-group">
                <label class="form-label">Time Period</label>
                <select class="form-control" @bind="timePeriod">
                    <option value="current">Current State (Snapshot)</option>
                    <option value="24h">Last 24 Hours</option>
                    <option value="7d">Last 7 Days</option>
                    <option value="30d">Last 30 Days</option>
                    <option value="custom">Custom Range...</option>
                </select>
            </div>

            @if (timePeriod == "custom")
            {
                <div class="form-group">
                    <div class="input-row">
                        <input type="date" class="form-control" @bind="customStartDate" />
                        <input type="date" class="form-control" @bind="customEndDate" />
                    </div>
                </div>
            }

            <div class="action-buttons">
                <button class="btn btn-primary btn-lg" @onclick="GenerateReport" disabled="@isGenerating">
                    @if (isGenerating)
                    {
                        <span class="spinner"></span>
                        <span>Generating Report...</span>
                    }
                    else
                    {
                        <span>Generate Report</span>
                    }
                </button>
            </div>

            @if (isGenerating)
            {
                <div class="progress-bar">
                    <div class="progress-fill" style="width: @(reportProgress)%"></div>
                </div>
                <p class="progress-text">@currentGenerationStep (@reportProgress%)</p>
            }

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger" style="margin-top: 1rem;">
                    @errorMessage
                </div>
            }
        </div>
    </div>

    <!-- Recent Reports -->
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">Recent Reports</h2>
        </div>
        <div class="card-body">
            <div class="reports-table">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Report Name</th>
                            <th>Type</th>
                            <th>Format</th>
                            <th>Generated</th>
                            <th>Size</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var report in recentReports)
                        {
                            <tr>
                                <td>@report.Name</td>
                                <td>@report.Type</td>
                                <td>
                                    <span class="badge badge-@report.Format">@report.Format.ToUpper()</span>
                                </td>
                                <td>@report.GeneratedAt.ToString("MMM dd, yyyy HH:mm")</td>
                                <td>@report.Size</td>
                                <td>
                                    <button class="btn btn-sm btn-primary" @onclick="() => DownloadReport(report.Id)">
                                        Download
                                    </button>
                                    <button class="btn btn-sm btn-danger" @onclick="() => DeleteReport(report.Id)">
                                        Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (!recentReports.Any())
                {
                    <div class="empty-state">
                        <div class="empty-icon">üìÑ</div>
                        <h3>No Reports Generated</h3>
                        <p>Generate your first report to see it here.</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Report Templates (MSP Feature) -->
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">Report Templates</h2>
            <span class="badge badge-premium">MSP License</span>
        </div>
        <div class="card-body">
            <div class="template-info">
                <p>Custom report templates with white-label branding are available with an MSP license.</p>
                <ul>
                    <li>Custom logo and company name</li>
                    <li>Remove Network Optimizer branding</li>
                    <li>Custom color schemes</li>
                    <li>Template management</li>
                </ul>
                <button class="btn btn-secondary">Upgrade to MSP License</button>
            </div>
        </div>
    </div>
</div>

@code {
    private string reportType = "security-audit";
    private string selectedFormat = "pdf";
    private string timePeriod = "current";
    private DateTime customStartDate = DateTime.Today.AddDays(-7);
    private DateTime customEndDate = DateTime.Today;

    private bool includeExecutiveSummary = true;
    private bool includeNetworkTopology = true;
    private bool includeCriticalIssues = true;
    private bool includeRecommendations = true;
    private bool includeDeviceDetails = false;
    private bool includeHistoricalTrends = false;

    private bool isGenerating = false;
    private int reportProgress = 0;
    private string currentGenerationStep = "";

    private List<ReportInfo> recentReports = new();
    private Dictionary<int, byte[]> generatedReportBytes = new();
    private string? errorMessage;

    private async Task GenerateReport()
    {
        isGenerating = true;
        reportProgress = 0;
        errorMessage = null;
        StateHasChanged();

        try
        {
            currentGenerationStep = "Loading audit data...";
            reportProgress = 20;
            StateHasChanged();
            await Task.Delay(200);

            // Get audit data
            var auditSummary = await AuditService.GetAuditSummaryAsync();
            var lastAudit = AuditService.LastAuditResult;

            if (lastAudit == null || !lastAudit.Issues.Any())
            {
                errorMessage = "No audit data available. Please run an audit first from the Audit page.";
                return;
            }

            currentGenerationStep = "Building report data...";
            reportProgress = 40;
            StateHasChanged();
            await Task.Delay(200);

            // Build report data (complete data like Security Audit page)
            var reportData = new NetworkOptimizer.Reports.ReportData
            {
                ClientName = "Network",
                GeneratedAt = DateTime.Now,
                SecurityScore = new NetworkOptimizer.Reports.SecurityScore
                {
                    Rating = lastAudit.Score >= 90 ? NetworkOptimizer.Reports.SecurityRating.Excellent
                           : lastAudit.Score >= 75 ? NetworkOptimizer.Reports.SecurityRating.Good
                           : lastAudit.Score >= 60 ? NetworkOptimizer.Reports.SecurityRating.Fair
                           : NetworkOptimizer.Reports.SecurityRating.NeedsWork,
                    CriticalIssueCount = lastAudit.CriticalCount,
                    WarningCount = lastAudit.WarningCount,
                    TotalPorts = lastAudit.Statistics?.TotalPorts ?? 0,
                    DisabledPorts = lastAudit.Statistics?.DisabledPorts ?? 0,
                    MacRestrictedPorts = lastAudit.Statistics?.MacRestrictedPorts ?? 0
                },

                // Networks
                Networks = lastAudit.Networks
                    .Select(n => new NetworkOptimizer.Reports.NetworkInfo
                    {
                        NetworkId = n.Id,
                        Name = n.Name,
                        VlanId = n.VlanId,
                        Subnet = n.Subnet ?? "N/A",
                        Purpose = n.Purpose
                    })
                    .ToList(),

                // Switches with ports
                Switches = lastAudit.Switches
                    .Select(s => new NetworkOptimizer.Reports.SwitchDetail
                    {
                        Name = s.Name,
                        Model = s.Model ?? "",
                        ModelName = s.ModelName ?? s.Model ?? "",
                        DeviceType = s.DeviceType ?? "",
                        IsGateway = s.IsGateway,
                        MaxCustomMacAcls = s.MaxCustomMacAcls,
                        Ports = s.Ports
                            .Select(p => new NetworkOptimizer.Reports.PortDetail
                            {
                                PortIndex = p.PortIndex,
                                Name = p.Name,
                                IsUp = p.IsUp,
                                Speed = p.Speed,
                                Forward = p.Forward,
                                IsUplink = p.IsUplink,
                                NativeNetwork = p.NativeNetwork,
                                NativeVlan = p.NativeVlan,
                                ExcludedNetworks = p.ExcludedNetworks,
                                PortSecurityEnabled = p.PortSecurityEnabled,
                                PortSecurityMacs = p.PortSecurityMacs,
                                Isolation = p.Isolation,
                                PoeEnabled = p.PoeEnabled,
                                PoePower = p.PoePower,
                                PoeMode = p.PoeMode ?? ""
                            })
                            .ToList()
                    })
                    .ToList(),

                CriticalIssues = lastAudit.Issues
                    .Where(i => i.Severity == "Critical")
                    .Select(i => new NetworkOptimizer.Reports.AuditIssue
                    {
                        Severity = NetworkOptimizer.Reports.IssueSeverity.Critical,
                        SwitchName = i.DeviceName ?? "Unknown",
                        PortIndex = int.TryParse(i.Port, out var p) ? p : null,
                        PortName = i.PortName ?? "",
                        CurrentNetwork = i.CurrentNetwork ?? "",
                        CurrentVlan = i.CurrentVlan,
                        Message = i.Description,
                        RecommendedAction = i.Recommendation
                    })
                    .ToList(),
                RecommendedImprovements = lastAudit.Issues
                    .Where(i => i.Severity == "Warning")
                    .Select(i => new NetworkOptimizer.Reports.AuditIssue
                    {
                        Severity = NetworkOptimizer.Reports.IssueSeverity.Warning,
                        SwitchName = i.DeviceName ?? "Unknown",
                        PortIndex = int.TryParse(i.Port, out var p) ? p : null,
                        PortName = i.PortName ?? "",
                        CurrentNetwork = i.CurrentNetwork ?? "",
                        CurrentVlan = i.CurrentVlan,
                        Message = i.Description,
                        RecommendedAction = i.Recommendation
                    })
                    .ToList(),

                // Hardening notes
                HardeningNotes = lastAudit.HardeningMeasures
            };

            currentGenerationStep = "Generating PDF...";
            reportProgress = 70;
            StateHasChanged();
            await Task.Delay(200);

            // Generate PDF
            var generator = new NetworkOptimizer.Reports.PdfReportGenerator();
            var pdfBytes = generator.GenerateReportBytes(reportData);

            currentGenerationStep = "Finalizing...";
            reportProgress = 100;
            StateHasChanged();

            // Store report and add to list
            var reportId = recentReports.Count + 1;
            generatedReportBytes[reportId] = pdfBytes;

            recentReports.Insert(0, new ReportInfo
            {
                Id = reportId,
                Name = $"Security Audit - {DateTime.Now:MMM dd, yyyy}",
                Type = "Security Audit",
                Format = selectedFormat,
                GeneratedAt = DateTime.Now,
                Size = $"{pdfBytes.Length / 1024} KB"
            });

            Logger.LogInformation("Generated report {Id} with {Size} bytes", reportId, pdfBytes.Length);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error generating report");
            errorMessage = $"Error generating report: {ex.Message}";
        }
        finally
        {
            isGenerating = false;
            StateHasChanged();
        }
    }

    private async Task DownloadReport(int reportId)
    {
        try
        {
            if (!generatedReportBytes.TryGetValue(reportId, out var pdfBytes))
            {
                errorMessage = "Report not found. It may have been generated in a previous session.";
                StateHasChanged();
                return;
            }

            var report = recentReports.FirstOrDefault(r => r.Id == reportId);
            var fileName = report != null
                ? $"{report.Name.Replace(" ", "_")}.pdf"
                : $"NetworkReport_{reportId}.pdf";

            var base64 = Convert.ToBase64String(pdfBytes);
            await JSRuntime.InvokeVoidAsync("downloadFile", fileName, "application/pdf", base64);
            Logger.LogInformation("Downloaded report {FileName}", fileName);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error downloading report");
            errorMessage = $"Error downloading report: {ex.Message}";
            StateHasChanged();
        }
    }

    private Task DeleteReport(int reportId)
    {
        recentReports.RemoveAll(r => r.Id == reportId);
        generatedReportBytes.Remove(reportId);
        StateHasChanged();
        return Task.CompletedTask;
    }

    public class ReportInfo
    {
        public int Id { get; set; }
        public string Name { get; set; } = "";
        public string Type { get; set; } = "";
        public string Format { get; set; } = "";
        public DateTime GeneratedAt { get; set; }
        public string Size { get; set; } = "";
    }
}
