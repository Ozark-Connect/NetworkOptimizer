    {
        try
        {
            if (!_dataUsageConfigs.TryGetValue(wanKey, out var config))
                return;

            await DataUsageService.SaveConfigAsync(config);
            _dirtyConfigs.Remove(wanKey);
            _unlockedAdjustmentWans.Remove(wanKey);
