                await AlertRepository.SaveRuleAsync(rule);
            }

            _showRuleForm = false;
            await LoadRules();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error saving rule");
            _ruleError = "Failed to save rule. Check logs for details.";
