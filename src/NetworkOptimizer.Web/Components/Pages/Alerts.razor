        {
            Logger.LogError(ex, "Error loading data usage");
        }
    }

    private async Task ToggleDataUsageTracking(string wanKey, string defaultName, bool enabled)
    {
        try
        {
            if (!_dataUsageConfigs.TryGetValue(wanKey, out var config))
            {
                config = new WanDataUsageConfig
                {
                    WanKey = wanKey,
                    Name = defaultName,
                    Enabled = enabled,
                    DataCapGb = 0,
                    WarningThresholdPercent = 80,
                    BillingCycleDayOfMonth = 1
                };
            }
            else
            {
                config.Enabled = enabled;
            }

            await DataUsageService.SaveConfigAsync(config);

            if (enabled)
            {
                // Trigger immediate poll to get initial usage data
                await DataUsageService.TriggerPollAsync();
                // Show Save button so user can configure cap/billing day
                _dirtyConfigs.Add(wanKey);
            }

            await LoadDataUsageAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error toggling data usage for {WanKey}", wanKey);
        }
    }

    private void EditDataUsageConfig(string wanKey,
        double? capGb = null, int? warningPct = null, int? billingDay = null, double? manualAdj = null)
    {
        if (!_dataUsageConfigs.TryGetValue(wanKey, out var config))
            return;

        if (capGb.HasValue) config.DataCapGb = capGb.Value;
        if (warningPct.HasValue) config.WarningThresholdPercent = warningPct.Value;
        if (billingDay.HasValue) config.BillingCycleDayOfMonth = billingDay.Value;
        if (manualAdj.HasValue) config.ManualAdjustmentGb = manualAdj.Value;

        _dirtyConfigs.Add(wanKey);
    }

