                }
            }

            // Load live WAN up/down status from device API
            _wanUpStatus = await DataUsageService.GetWanStatusAsync();

            // Load configs (keyed by WanNetworkgroup e.g., "WAN", "WAN2")
            var configs = await DataUsageService.GetAllConfigsAsync();
            _dataUsageConfigs = configs.ToDictionary(c => c.WanKey);

            // Load current usage summaries (falls back to DB if background poll hasn't run yet)
            _wanUsageSummaries = await DataUsageService.GetCurrentUsageAsync();
