            incident.Status = AlertStatus.Acknowledged;
            await AlertRepository.UpdateIncidentAsync(incident);
            await LoadIncidents();
            await LoadActiveAlerts();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error acknowledging incident {Id}", incident.Id);
        }
    }

